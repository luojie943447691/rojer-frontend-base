{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "declaration": true,
    "rootDir": "./",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "paths": {}
  },
  "include": ["packages/*/src"],
  "exclude": ["template/*.*"]
}
